<?xml version="1.0" encoding="utf-8" ?>
<文字列変換設定>
  <ERB変換設定>
    <!--種類は"NO", "ABL", "EXP", "TALENT", "TRAIN", "MARK", "ITEM", "BASE", "EQUIP", "TEQUIP", "FLAG", "TFLAG", "CFLAG", "PALAM", "JUEL", "TCVAR", "TSTR", "CSTR"のどれか-->
    <!--{ID}で番号を指定して{名前}でCSVで定義された名前または空白などを含む場合やキャラの名前の場合_Rename.csvで自動追加されたパターンを使う-->
    <!--{かっこ以外のトークン}は([\\w]+)、{かっこ含むトークン}は"(\\([^(R]*\\))"。この二つは同時に使用できない-->
    <!--ただし"TALENTNAME"のようなパターンはすでに自動追加されたパターンで変換されるのでここで設定しなくてもいい-->
    <ERB変換設定 種類="NO" 変換前パターン="NO:{かっこ以外のトークン}([\\s]*)==([\\s]*){ID}" 変換後パターン="NO:{かっこ以外のトークン} == [[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="NO:{かっこ以外のトークン}([\\s]*)!=([\\s]*){ID}" 変換後パターン="NO:{かっこ以外のトークン} != [[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="NO:{かっこ含むトークン}([\\s]*)==([\\s]*){ID}" 変換後パターン="NO:{かっこ含むトークン} == [[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="NO:{かっこ含むトークン}([\\s]*)!=([\\s]*){ID}" 変換後パターン="NO:{かっこ含むトークン} != [[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="GETCHARA\({ID}" 変換後パターン="GETCHARA\([[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="ADDCHARA([\\s*]){ID}" 変換後パターン="ADDCHARA [[{名前}]]"/>
    <ERB変換設定 種類="NO" 変換前パターン="DELCHARA([\\s*]){ID}" 変換後パターン="DELCHARA [[{名前}]]"/>
    <ERB変換設定 種類="BASE" 変換前パターン="MAXBASE:{ID}" 変換後パターン="MAXBASE:{名前}"/>
    <ERB変換設定 種類="BASE" 変換前パターン="MAXBASE:{かっこ以外のトークン}:{ID}" 変換後パターン="MAXBASE:{かっこ以外のトークン}:{名前}"/>
    <ERB変換設定 種類="BASE" 変換前パターン="MAXBASE:{かっこ含むトークン}:{ID}" 変換後パターン="MAXBASE:{かっこ含むトークン}:{名前}"/>
    <ERB変換設定 種類="BASE" 変換前パターン="LOSEBASE:{ID}" 変換後パターン="LOSEBASE:{名前}"/>
    <ERB変換設定 種類="BASE" 変換前パターン="LOSEBASE:{かっこ以外のトークン}:{ID}" 変換後パターン="LOSEBASE:{かっこ以外のトークン}:{名前}"/>
    <ERB変換設定 種類="BASE" 変換前パターン="LOSEBASE:{かっこ含むトークン}:{ID}" 変換後パターン="LOSEBASE:{かっこ含むトークン}:{名前}"/>
  </ERB変換設定>
</文字列変換設定>
