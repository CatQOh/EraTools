<?xml version="1.0" encoding="utf-8" ?>
<CSV設定>
  <基本機能変換>
    <!-- ファイル名は省略した場合トークン.csvとする -->
    <CSV種類 種類="基礎" ファイル名="BASE.csv" トークン="BASE" >
      <!-- もし_rename.csvにBASE:0,体力があるならついでにERBの中のMAXBASE:(abc):0もMAXBASE:(abc):体力に変換するよ -->
      <追加変換トークン トークン="MAXBASE" />
    </CSV種類>
    <CSV種類 種類="アイテム" トークン="ITEM" >
      <追加変換トークン トークン="ITEMSALES" />
    </CSV種類>
    <CSV種類 種類="能力" ファイル名="ABL.csv" トークン="ABL"/>
    <CSV種類 種類="キャラフラグ" トークン="CFLAG"/>
    <CSV種類 種類="キャラ文字列" トークン="CSTR"/>
    <CSV種類 種類="経験" トークン="EXP"/>
    <CSV種類 種類="刻印" トークン="MARK"/>
    <CSV種類 種類="パラメータ" トークン="PALAM"/>
    <CSV種類 種類="基本素質" トークン="TALENT"/>
  </基本機能変換>
  <文字列の変換>
    <!-- いわゆる[[]]にいれると変換してくれるアレ -->
    <!-- さすがにこればかりは判断できないのでERBの変換はしない -->
    <!-- 自分でどーにかして -->
    <!-- いちおう変換前パラを整数としてparseしてグループ内の順番で書き出すけどエラー出たらログして無視する -->
    <!-- サンプルとしてChara*.csvよりキャラ番からキャラ名抜き出して"0,キャラ:あなた"にするやつ置いとく -->
    <CSV種類 種類="キャラクタ番号" ファイル名パターン="Chara*.csv"  変換前パラ="番号" 変換後パラ="名前" 変換後前置="キャラ"/>
  </文字列の変換>
</CSV設定>
